- cardSignin = errors ? 'card hide' : 'card'

#card-signin(class=""+cardSignin)
  .card-body

    h2 Sign In

    p Create an account for this incredible application. &nbsp;
      a(id="link-sigin-learn-more" href="#") Learn More

    //- FLASH MESSAGES
    .msg-container
      //- SUCCESS
      if(success_msg)
        each success in success_msg
          .msgs#error-msg
            span #{success_msg}
            .bckgrnd.alert-success

      //- ERROR
      if(error_msg)
        each error in error_msg
          .msgs#error-msg
            span #{error_msg}
            .bckgrnd.alert-danger

      //- ERROR
      if(error)
        each errormsg in error
          .msgs#system-error
            span #{error}
            .bckgrnd.alert-warning

    form(method="post" action="/login")
      .form-group
        label Username
        input(id="signinUsername" type="email" name="username" onfocus="preValidUsername(this)" class="form-control" placeholder="Username")

      .form-group
        label Password
        input(id="signinPassword" type="password" name="password" onfocus="preValidPassword(this)" class="form-control" placeholder="Password")

      .form-check
        label(class="form-check-label")
          input(type="checkbox" class="form-check-input")
          span Remember Me

      button(id="sign-in" type="submit" class="btn btn-primary") Sign In

    small
      span By clicking Sign In, you agree to our &nbsp;
      a(id="link-sigin-license-agreement" href="#") Terms of Use
      span &nbsp; and  &nbsp;
      a(id="link-sigin-privacy-statement" href="#") Privacy Statement.

    hr

    a(id="link-sigin-forgot-password" href="#") I forgot my username or password
    br
    span New to Acme? &nbsp;
    a(id="link-sigin-create-account" href="#") Create an account.
