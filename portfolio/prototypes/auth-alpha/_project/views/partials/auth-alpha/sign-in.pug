//- FLASH MESSAGES
- successMsg = success_msg ? 'msg' : 'alert alert-success'
- errorMsg = error_msg ? 'msg' : 'alert alert-danger'
- errorErr = error ? 'msg' : 'alert alert-warning'

#card-signin.card
  .card-body

    h2 Sign In

    p Create an account for this incredible application. &nbsp;
      a(id="link-sigin-learn-more" href="#") Learn More

    //- FLASH MESSAGES FOR REGISTRATION
    div(class=""+successMsg) #{success_msg}
    div(class=""+errorMsg) #{error_msg}
    div(class=""+errorErr) #{error}

    form(method="post" action="/login")
      .form-group
        label Username
        input(type="email" name="username" class="form-control" placeholder="Username")
        // input(type="text" name="username" class="form-control" placeholder="Legacy Username")

      .form-group
        label Password
        input(type="password" name="password" class="form-control" placeholder="Password")
        // input(type="password" name="password" class="form-control" placeholder="Legacy Password")

      .form-check
        label(class="form-check-label")
          input(type="checkbox" class="form-check-input")
          span Remember Me

      button(id="sign-in" type="submit" class="btn btn-primary") Sign In

    small
      span By clicking Sign In, you agree to our &nbsp;
      a(id="link-sigin-license-agreement" href="#") Terms of Use
      span &nbsp; and  &nbsp;
      a(id="link-sigin-privacy-statement" href="#") Privacy Statement.

    hr

    a(id="link-sigin-forgot-password" href="#") I forgot my username or password
    br
    span New to Acme? &nbsp;
    a(id="link-sigin-create-account" href="#") Create an account.
